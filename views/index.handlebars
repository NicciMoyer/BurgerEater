<main>

  <h1 class="header" id="burgerHeader">Eat da burger!</h1>
  <div class="row">
    <div class="col-6" >
      {{!-- <h2>Burgers</h2> --}}

      <ul>
        <h3 id="uneatenHeader">Burgers Not Eaten</h3>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block eaten=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      {{!-- <h2>Burgers you've eaten</h2> --}}

      <ul>
        <h3 id="eatenHeader">Burgers Eaten</h3>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eaten=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div id="addDiv">
    <h2 class="header" id="addHeader">Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="ca">Burger:</label>
        <input type="text" id="ca" name="name">
      </div>
      <div class="form-group">
        <label for="eaten">Eaten?</label><br>
        <input type="radio" name="eaten" value="1">Eaten<br>
        <input type="radio" name="eaten" value="0">Haven't eaten</div>
  </div>
  <button type="submit" id="addButton">Add burger</button>


  </form>
  </div>
</main>